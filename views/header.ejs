<body>
    <header>
        <div class="icon">
            <a href="/"><img src="/images/courtney.png" height="48px" width="48px"></a>
            <div><a href="/">Robots Only</a></div>
        </div>
        <a href="#" class="toggle-button toggle">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </a>
        <div class="navbar-links">
        <ul>
        <% if(!locals.user) { %>
            <li><a href="/log-in">Log in</a></li>
            <li><a href="/sign-up">Sign up</a></li>
        <% } else { %>
            <li><a href="/create-message" onclick="">Create Message</a></li>
            <li><a href="/member">Member</a></li>
            <li><a href="/admin">Admin</a></li>
            <a href="/log-out"><li>Log out</li></a>
            <!-- <li><a href=""></a></li> -->
        <% } %>
            <li><a>About us</a></li>
            <li><button class="theme">Change Theme</button></li>
        </ul>
        </div>
    </header>
    <script>
        const toggleButton = document.querySelector(".toggle")
        const darkMode = document.querySelector(".theme")
        const navbarLinks = document.querySelector(".navbar-links")
    
        toggleButton.addEventListener('click', () => {
            navbarLinks.classList.toggle('active')
        })

        darkMode.addEventListener('click', () => {
            document.body.classList.toggle('dark')
        })

    </script>
</body>
</html>